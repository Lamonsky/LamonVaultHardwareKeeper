@model IEnumerable<Data.Computers.SelectVMs.MonitorsVM>

@{
    ViewData["Title"] = "Index";
}

<h1>@await Component.InvokeAsync("PageContentViewComponent", new { type = "MonitorCategoryName" })</h1>


<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
                                    <div class="col-md mt-2">
                                        <div class="card">
                                            <div class="card-body">   
                                                <h5 class="card-title mb-2">@item.Name</h5>
                                                <p class="card-text">
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "MonitorLocationName" })</strong> <br />
                            @item.Location<br />
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "MonitorStatusName" })</strong> <br />
                            @item.Status<br />
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "MonitorTypeName" })</strong> <br />
                            @item.MonitorType<br />
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "MonitorModelName" })</strong> <br />
                            @item.Model<br />
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "MonitorManufacturerName" })</strong> <br />
                            @item.ManufacturerName<br />                                                    
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "MonitorSerialNumberName" })</strong> <br />
                            @item.SerialNumber<br />
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "MonitorInventoryNumberName" })</strong> <br />
                            @item.InventoryNumber<br />
                                                </p>
                                                        <a class="navbar-brand" asp-area="" asp-controller="Monitor" asp-action="PrintToPDF" asp-route-id="@item.Id">
                            @await Component.InvokeAsync("PageContentViewComponent", new { type = "PrintToPDFButtonHeader" })
                                                            </a>
                                            </div>
                                        </div>
                                    </div>
        }
    }
    else
    {
                    <div class="col-md mt-2-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title mb-2">Brak obiektów do wyświetlenia</h5>
                            </div>
                        </div>
                    </div>
    }
</div>
