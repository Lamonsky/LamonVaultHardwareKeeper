@model WebInterface.Models.LoginRequest

@{
    ViewData["Title"] = "Logowanie";
}

<h1>@await Component.InvokeAsync("PageContentViewComponent", new { type = "LoginHeader" })</h1>

<hr />
<div class="container px-4 px-lg-5 justify-content-center">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-2 mb-2">
                    <label asp-for="EMail" class="control-label d-flex justify-content-center">@await Component.InvokeAsync("PageContentViewComponent", new { type = "LoginEMailHeader" })</label>
                    <input asp-for="EMail" class="form-control text-center mt-1" />
                    <span asp-validation-for="EMail" class="text-danger"></span>
                </div>
                <div class="form-group mt-2 mb-2">
                    <label asp-for="Password" class="control-label d-flex justify-content-center">@await Component.InvokeAsync("PageContentViewComponent", new { type = "LoginPasswordHeader" })</label>
                    <input asp-for="Password" class="form-control text-center mt-1" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-center mt-2">
                    <input type="submit" class="btn btn-primary" value="@await Component.InvokeAsync("PageContentViewComponent", new { type = "LoginButtonHeader" })"></input>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
