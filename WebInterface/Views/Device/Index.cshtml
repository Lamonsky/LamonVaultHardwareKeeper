@model IEnumerable<Data.Computers.SelectVMs.DevicesVM>

@{
    ViewData["Title"] = "Index";
}

<h1>@await Component.InvokeAsync("PageContentViewComponent", new { type = "DeviceCategoryName" })</h1>


<div class="row mt-2">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
                                    <div class="col-md">
                                        <div class="card">
                                            <div class="card-body">   
                                                <h5 class="card-title mb-2">@item.Name</h5>
                                                <p class="card-text">
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "DeviceStatusName" })</strong> <br />
                            @item.Status<br />
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "DeviceTypeName" })</strong> <br />
                            @item.DeviceType<br />
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "DeviceManufacturerName" })</strong> <br />
                            @item.Manufacturer<br />
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "DeviceModelName" })</strong> <br />
                            @item.Model<br />
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "DeviceSerialNumberName" })</strong> <br />
                            @item.SerialNumber<br />
                                                    <strong>@await Component.InvokeAsync("PageContentViewComponent", new { type = "DeviceInventoryNumberName" })</strong> <br />
                            @item.InventoryNumber<br />                                                    
                                                </p>
                                                        <a class="navbar-brand btn btn-primary" asp-area="" asp-controller="Device" asp-action="PrintToPDF" asp-route-id="@item.Id">
                            @await Component.InvokeAsync("PageContentViewComponent", new { type = "PrintToPDFButtonHeader" })
                                                    </a>
                                            </div>
                                        </div>
                                    </div>
        }
    }
    else
    {
                    <div class="col-md mt-2-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title mb-2">Brak obiektów do wyświetlenia</h5>
                            </div>
                        </div>
                    </div>
    }
</div>
